<?xml version="1.0" encoding="utf-8"?>
<!-- Item representing a category and its budget data -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <!-- Category value text -->
    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/fragment_budget_category_margin"
        android:includeFontPadding="false"
        android:textSize="16sp"
        tools:text="Category 1" />

    <!-- Budgeted value text -->
    <TextView
        android:id="@+id/tvBudgeted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/fragment_budget_budgeted_margin"
        android:includeFontPadding="false"
        android:textSize="16sp"
        tools:text="100€" />

    <!-- Available value text -->
    <TextView
        android:id="@+id/tvAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/fragment_budget_available_margin"
        android:includeFontPadding="false"
        android:textSize="16sp"
        tools:text="20€" />

</FrameLayout>